# Auto detect text files and perform LF normalization
* text=auto

# Documentation
*.md text diff=markdown
*.txt text
*.rst text

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Audio and Video
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wmv binary
*.flv binary
*.webm binary

# Archives
*.7z binary
*.bz2 binary
*.gz binary
*.rar binary
*.tar binary
*.zip binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Documents
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# Config files
*.json text
*.yaml text
*.yml text
*.toml text
*.ini text
*.cfg text
*.conf text

# Source code
*.js text
*.jsx text
*.ts text
*.tsx text
*.css text
*.scss text
*.sass text
*.less text
*.html text
*.xml text
*.php text
*.py text
*.java text
*.c text
*.cpp text
*.h text
*.cs text
*.vb text
*.sql text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore
